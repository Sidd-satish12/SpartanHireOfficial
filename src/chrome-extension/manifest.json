{
  "manifest_version": 3,
  "name": "Chrome Extension Starter",
  "version": "1.0.0",
  "action": {
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "description": "Find job opportunities with ease",
  "permissions": ["activeTab", "scripting", "tabs"],
  "host_permissions": ["https://www.linkedin.com/*"],
  "icons": {
    "16": "public/16.png",
    "32": "public/32.png",
    "48": "public/48.png",
    "192": "public/192.png"
  }
}
